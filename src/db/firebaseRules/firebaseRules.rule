rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function canAccess(){
      return request.auth!=null && 
      get(/databases/$(database)/documents/usersDetails/$(request.auth.uid)).data.auth.includes(0);
    }
   	match /usersDetails/{userDetails} {
    	allow read: if canAccess();
    }
  }
}